<%= simple_form_for [shop, slot] do |f| %>
  <%= f.input :day, collection: %w(Monday Tuesday Wednesday Thursday Friday Saturday Sunday) %>
  <%= f.input :start_hour %>
  <%= f.input :start_minute %>
  <%= f.input :end_hour %>
  <%= f.input :end_minute %>
  <%= f.submit "Submit slot" %>
<% end %>

<ul>
  <% @shop.slots.each do |slot| %>
    <li>
      <%= slot.day %> : <%= slot.start_hour %>h<%= slot.start_minute %> Ã  <%= slot.end_hour %>h<%= slot.end_minute %>
    </li>
  <% end %>
</ul>
