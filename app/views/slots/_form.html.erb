<%= simple_form_for [shop, slot] do |f| %>
  <%= f.input :day, collection: Slot::AUTORIZED_DAYS %>
  <%= f.input :start_hour, collection: Slot::AUTORIZED_HOURS %>
  <%= f.input :start_minute, collection: Slot::AUTORIZED_MINUTES %>
  <%= f.input :end_hour, collection: Slot::AUTORIZED_HOURS %>
  <%= f.input :end_minute, collection: Slot::AUTORIZED_MINUTES %>
  <%= f.submit %>
<% end %>
