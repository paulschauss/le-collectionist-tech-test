<%= simple_form_for [shop, slot] do |f| %>
  <%= f.input :day, collection: %w(Monday Tuesday Wednesday Thursday Friday Saturday Sunday) %>
  <%= f.input :start_hour, input_html: {value: '8'} %>
  <%= f.input :start_minute, input_html: {value: '00'} %>
  <%= f.input :end_hour, input_html: {value: '8'} %>
  <%= f.input :end_minute, input_html: {value: '00'} %>
  <%= f.submit "Submit slot" %>
<% end %>
